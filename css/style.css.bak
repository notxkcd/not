}

article p {
	-webkit-hyphens: auto;
	-moz-hyphens: auto;
	hyphens: auto;
}

.list-flat {
	list-style-type: none;
	margin: 0;
	padding: 0;
}

.list-flat li {
	display: inline;
}

.list-spaced-left li {
	margin-left: 1rem;
}

.list-spaced-right li {
	margin-right: 1rem;
}

.no-decoration {
	text-decoration: none;
}

.no-margin {
	margin: 0;
}

.no-margin-top {
	margin-top: 0;
}

.center-text {
	text-align: center;
}

.right {
	float: right;
}

.clearfix::after {
	clear: both;
	content: ".";
	display: block;
	font-size: 0;
	line-height: 0;
	height: 0;
	overflow: hidden;
}

.top-gap {
	margin-top: 10vh;
}

.top-gap-double-em {

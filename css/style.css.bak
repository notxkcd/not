/* Headings */
h1, h2, h3, h4, h5, h6 {
    font-family: 'Computer Modern', serif; /* LaTeX's standard font for headings */
    font-weight: bold;
    font-size: 2em;
    color: #000;
    margin-top: 1.2em;
    margin-bottom: 0.8em;
}

h1 { font-size: 1.8em; } /* Corresponds to \section */
h2 { font-size: 1.6em; } /* Corresponds to \subsection */
h3 { font-size: 1.4em; } /* Corresponds to \subsubsection */
h4 { font-size: 1.2em; } /* Corresponds to \paragraph */
h5 { font-size: 1.1em; } /* Corresponds to \subparagraph */
h6 { font-size: 1.1em; }

p {
    margin-top: 1em;
    margin-bottom: 1em;
    text-align: justify; /* Justified text like in LaTeX */
}

blockquote {
    font-size: 10pt;
    margin-left: 1.5em;
    margin-right: 1.5em;
    padding-left: 1em;
    border-left: 0.2em solid #000;
}

pre, code {
    font-family: 'Courier New', Courier, monospace; /* Monospaced font like in LaTeX */
    background-color: #f8f8f8;
    padding: 0.5em;
    border: 1px solid #ccc;
    border-radius: 4px;
}

/* Lists */
ul, ol {
    margin-top: 1em;
    margin-bottom: 1em;
    padding-left: 2em;
}

li {
    margin-bottom: 0.5em;
}

/* Tables */
table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1em;
    font-size: 11pt;
}

th, td {
    border: 1px solid #000;
    padding: 0.5em;
    text-align: left;
}

/* Equations */
.katex {
    font-size: 1.3em;
    line-height: 1.5;
}

/* Figures and Images */
figure {
    text-align: center;
    margin: 1em 0;
}

figcaption {
    font-size: 9pt;
    margin-top: 0.5em;
    font-style: italic;
}

/* Footnotes */
sup.footnote-ref {
    font-size: 8pt;
    vertical-align: super;
}

.footnote-item {
    font-size: 9pt;
    margin-top: 0.5em;
}

/* Section and Subsection Styles */
section {
    margin-top: 2em;
    margin-bottom: 2em;
}

section h1 {
    margin-top: 0;
}

.subsection h2 {
    margin-top: 1.5em;
    margin-bottom: 1em;
}

/* Hyperlinks */
a {
    color: #000;
    text-decoration: underline;
}

a:hover {
    color: #007BFF;
    text-decoration: none;
}


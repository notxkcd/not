/* General document styling */

@font-face {
    font-family: 'Perfect DOS VGA 437';
    font-style: normal;
    font-weight: normal;
    src: url('../fonts/Perfect DOS VGA 437.woff') format('woff');
}

@font-face {
    font-family: 'Perfect DOS VGA 437 Win';
    font-style: normal;
    font-weight: normal;
    src: url('../fonts/Perfect DOS VGA 437 Win.woff') format('woff');
}





.shahid {
    font-family: 'Perfect DOS VGA 437', 'Perfect DOS VGA 437 Win', monospace;
    font-size: 2rem; /* Adjust for size */
    color: #33FF33; /* Classic retro green */
    text-align: center;
    letter-spacing: 0.1em; /* Adds a retro feel */
    text-transform: uppercase;
    background-color: #000; /* Background for contrast */
    padding: 10px;
    border: 2px solid #33FF33; /* Retro-styled border */
    display: inline-block;
}


